        <div class="row">
            <div class="col s12 m12 l6 containerDashboard">
                <div class="contentDashboard">
                    <h2>Inscriptions</h2>
                    <section class="listAddUsers">
                        <a href="{{ path('newCompany') }}">
                            <div class="center valign-wrapper hoverable" id="createCompany">
                                <ul>
                                    <li><i class="fa fa-building fa-2x"></i></li>
                                    <li><p>Nouvelle entreprise</p></li>
                                </ul>
                            </div>
                        </a>
                        <a href="{{ path('newUser') }}">
                            <div class="center valign-wrapper hoverable" id="createEmploye">
                                <ul>
                                    <li><i class="fa fa-user-plus fa-2x"></i></li>
                                    <li><p>Nouveau collaborateur</p></li>
                                </ul>
                            </div>
                        </a>
                        <a href="{{ path('newUser') }}">
                            <div class="center valign-wrapper hoverable" id="createHappy">
                                <ul>
                                    <li><i class="fa fa-user-plus fa-2x"></i></li>
                                    <li><p>Nouveau HappyCoach</p></li>
                                </ul>
                            </div>
                        </a>
                    </section>
                </div>
            </div>
            <div class="col s12 m12 l6 containerDashboard">
                <div class="contentDashboard">
                    <h2>Projets</h2>
                    <section class="listAddUsers">
                        <a href="{{ path('listingProjects') }}">
                            <div class="center valign-wrapper hoverable" id="validProject">
                                <ul>
                                    <li><i class="fa fa-check-square-o fa-2x"></i></li>
                                    <li><p>Valider un projet</p></li>
                                </ul>
                            </div>
                        </a>
                        <a href="{{ path('listingProjects') }}">
                            <div class="center valign-wrapper hoverable" id="waitProject">
                                <ul>
                                    <li><i class="fa fa-folder-open-o fa-2x"></i></li>
                                    <li><p>Les projets en attentes</p></li>
                                </ul>
                            </div>
                        </a>
                        <a href="{{ path('listingProjects') }}">
