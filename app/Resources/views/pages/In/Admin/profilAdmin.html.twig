                        </a>
                        <a href="{{ path('listingCompany') }}">
                            <p class="center valign-wrapper" id="deleteCompany"><i class="fa fa-trash-o fa-2x"> </i> <span>Supprimer entreprise</span></p>
                        </a>
                    </section>
                </div>
            </div>
            <div class="col s12 m12 l4 containerDashboard">
                <div class="contentDashboard">
                    <h2>Collaborateurs</h2>
                    <section class="listSimple">
                        <a href="{{ path('listingUser') }}">
                            <p class="center valign-wrapper" id="allCompany"><i class="fa fa-list-alt fa-2x"> </i> <span>Tous les collaborateurs</span></p>
                        </a>
                        <a href="{{ path('listingUser') }}">
                            <p class="center valign-wrapper" id="deleteCompany"><i class="fa fa-trash-o fa-2x"> </i> <span>Supprimer collaborateur</span></p>
                        </a>
                    </section>
                </div>
            </div>
            <div class="col s12 m12 l4 containerDashboard">
                <div class="contentDashboard">
                    <h2>HappyCoachs</h2>
                    <section class="listSimple">
                        <a href="{{ path('listingHappyCoach') }}">
                            <p class="center valign-wrapper" id="allHappyCoach"><i class="fa fa-list-alt fa-2x"> </i> <span>Tous les happyCoachs</span></p>
                        </a>
                        <a href="{{ path('listingUser') }}">
