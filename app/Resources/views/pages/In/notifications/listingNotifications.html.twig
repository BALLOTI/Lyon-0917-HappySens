{% extends 'baseIn.html.twig' %}

{% block title %}Vos notifications{% endblock %}

{% block content %}
    <div class="container generalContainer">
        <div class="row">
            <h2 class="header left title">Vos notifications</h2>
            <ul class="col s12">
                {% for notif in notifs %}
                {%  dump notif.sender %}
                <li class="col s10 offset-s1">
                    <div class="card-panel grey lighten-5 z-depth-1 hoverable">
                        <div class="row valign-wrapper">
                            <div class="col s2">
                                <img src="https://randomuser.me/api/portraits/thumb/men/83.jpg" alt="" class="circle responsive-img"> <!-- notice the "circle" class -->
                            </div>
                            <ul class="col s10">
                                <li class="black-text">
                                    {{ notif.content }}
                                </li>
                                <li><a href="#">@title.project</a></li>
                            </ul>
                        </div>
                    </div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

