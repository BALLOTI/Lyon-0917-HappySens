{% extends 'base.html.twig' %}

{% block title %}RÃ©initialisation du MotDePasse{% endblock %}

{% block content %}
    {{ include('partials/frame/loader.html.twig') }}
    <div class="container generalContainer widthMax">
        <form action="{{ path('sendChange') }}" method="post">
            <div class="row">
                <div class="input-field col s12">
                    <h5 class="titleSecond">
                        Vous avez perdu votre mot de passe ? Pas de panique, saisissez votre adresse e-mail ci-dessous, et vous recevrez
                        un lien vous permettant de choisir un nouveau mot de passe.
                    </h5>
                </div>
                {{ form_start(form) }}
                    <div class="input-field col s12 center">
                        <i class="fa fa-envelope-o prefix"></i>
                        {% if (form_errors(form.email)) %}
                            {{ form_widget(form.email, {'attr': {'class': 'error'}}) }}
                        {% else %}
                            {{ form_widget(form.email) }}
                        {% endif %}
                        <label for="email"><span class="requireInput">* </span>Email</label>
                        <div class="center error">
                            {{ form_errors(form.email) }}
                            {% if error is defined %}
                                {{ error }}
                            {% endif %}
                        </div>
                    </div>
                    <div class="input-field col s12 center">
                        <a href="{{ path('login') }}" class="btn-flat waves-effect waves-light">Annuler
                            <i class="material-icons left">reply</i>
                        </a>
                        <button type="submit" class="btn waves-effect waves-light amber darken-2" onclick="loadingPage()">
                            Envoyer
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </form>
    </div>
{% endblock %}