                            <div class="footerReveal">
                                <div class="left">
                                    <a href="{{ path('viewProject') }}"><i class="fa fa-file"> </i> Voir la fiche du projet</a>
                                </div>
                                <div class="right">
                                    <a href="#!" onclick="like()">15 <i class="fa fa-heart red-text"></i></a>
