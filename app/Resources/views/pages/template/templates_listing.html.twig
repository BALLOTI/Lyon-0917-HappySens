{% extends 'base.html.twig' %}

{% block title %}Vos notifications{% endblock %}

{% block navbar %}
    {{ include('partials/components/navbarIn.html.twig') }}
{% endblock %}

{% block content %}
    <div class="container generalContainer">
        <div class="row">
            <h2 class="header left title">Le titre du listing</h2>
            <ul class="col s12">
                {% for i in 0..4 %}
