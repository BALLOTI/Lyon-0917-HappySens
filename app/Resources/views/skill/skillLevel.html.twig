
{% for i in 1..level | round %}
    <img class="responsive-img" src="{{ asset('assets/images/icone-soleil-red.png') }}">
{% endfor %}
{% if level | round != 5 %}
    {% for i in 5..(level | round+ 1) %}
        <img class="responsive-img" src="{{ asset('assets/images/icone-soleil-vide-red.png') }}">
    {% endfor %}
{% endif %}